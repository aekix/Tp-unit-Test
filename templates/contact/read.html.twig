{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <style>
        a.button {
            -webkit-appearance: button;
            -moz-appearance: button;
            appearance: button;

            text-decoration: none;
            color: initial;
        }
    </style>
    <div class="example-wrapper">
        Firstname : {{ contact.firstname }}
        <br>
        Lastname : {{ contact.lastname }}
        <br>
        Email : {{ contact.email }}
        <br>
        Content : <br> {{ contact.content }}
        <br>
        <a href="{{ path('contact_delete', {id: contact.id}) }}" class="button">Supprimer</a>
        <a href="{{ path('contact_update', {id: contact.id}) }}" class="button">Modifier</a>

    </div>
{% endblock %}
